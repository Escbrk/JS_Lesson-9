{{#each results}}
<li class='movie-card'>
        <img src='https://image.tmdb.org/t/p/w500/{{poster_path}}' alt='{{title}}'>
        <div class='movie-info'>
            <h2>{{title}}</h2>
            <p>Release date: {{release_date}}</p>
            <p>Vote average: {{vote_average}}</p>
        </div>
    </li>
{{/each}}